# --- Seguridad y pÃ¡gina por defecto ---
Options -Indexes
DirectoryIndex index.html

# --- Reescrituras ---
RewriteEngine On

# 1 salto: forzar https Y quitar www -> https://deloreanalquiler.com/...
RewriteCond %{HTTPS} !=on [OR]
RewriteCond %{HTTP_HOST} ^www\.deloreanalquiler\.com$ [NC]
RewriteRule ^ https://deloreanalquiler.com%{REQUEST_URI} [R=301,L]

# No reescribir si el recurso o el directorio existen
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# URLs sin .html -> servir el .html si existe 
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^([^/]+)/?$ $1.html [L]